<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/buttonColor"/>
            <stroke android:width="2dp" android:color="@color/colorPrimaryDark"/>
            <padding android:top="5pt"
                android:bottom="5pt"
                android:left="5pt"
                android:right="5pt"/>
            <corners android:radius="10pt"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/colorPrimary" android:endColor="@color/colorPrimaryDark"/>
            <stroke android:width="2dp" android:color="@color/colorBackground"/>
            <padding android:top="5pt"
                android:bottom="5pt"
                android:left="5pt"
                android:right="5pt"/>
            <corners android:radius="10pt"/>
        </shape>
    </item>
</selector>